class Solution {
    public int pivotIndex(int[] nums)
    {
                
        
        int sum = 0;
        for(int i=0;i<nums.length;i++){
            sum += nums[i];
            
        }
        
        int l_sum = 0, r_sum = sum;
        
        for(int i=0;i<nums.length;i++){
            r_sum = r_sum - nums[i];
            
            if(l_sum == r_sum)
                return i;
            
            l_sum += nums[i];
        }
        return -1;
    }
}
