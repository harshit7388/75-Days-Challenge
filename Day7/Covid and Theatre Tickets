/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int tc = sc.nextInt();
		for(int i= 0; i<tc; i++){
		    int n = sc.nextInt();
		    int m = sc.nextInt();
		    
		    int rp = n/2 + n%2;
		    int r_sp = m/2 + m%2;
		    System.out.println(r_sp * rp);
		}
	}
}
